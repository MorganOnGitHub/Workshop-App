<base href="/">
<%- include('navbar') %>
<div id="edit-booking">
    <h2 id="edit-title">Edit Booking</h2>
    <form action="/edit/<%= booking._id %>" method="POST">
        <label for="name">Name</label>
        <input type="text" name="name" value="<%= booking.name %>" required>
        <label for="email">Email</label>
        <input type="text" name="email" value="<%= booking.email %>" required>
        <label for="phone">Phone Number</label>
        <input type="text" name="phone_number" value="<%= booking.phone_number %>" required>
        <label for="date">Date of Booking</label>
        <input type="date" name="date_booking" value="<%= booking.date_booking.toISOString().split('T')[0] %>" required>
        <button type="submit">Update Booking</button>
    </form>
</div>